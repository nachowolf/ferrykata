           <h3>{{messages.error1}}</h3>

         </div>{{/if}}
<form action="/createFerry" method="POST">
<input type="number" placeholder="parking space" name='parkingSpace'>
<input type="number" placeholder=" passenger seats" name='passengerSeats'>
<input type="submit" value='submit'>
</form>

<h3>{{messages.success}}</h3>
